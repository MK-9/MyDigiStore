<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lnlContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#65000000"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp">


    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorCardBackground"
        app:cardCornerRadius="8dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="false">


        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="300dp"
            android:orientation="vertical">
            <!--android:layout_width="UNKNOWN_DATA_0x10e01"-->
            <!--android:layout_height="UNKNOWN_DATA_0x12c01"-->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/colorPopupTopBar"
                android:gravity="center_vertical|center_horizontal|center"
                android:orientation="horizontal">
                <!--android:layout_height="UNKNOWN_DATA_0x3001"-->


                <ir.msit87.mydigistore.view.AMTextView
                    android:id="@+id/txtPopUpTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                    android:padding="8dp"
                    android:text="تایید"
                    android:textColor="@color/textColorLightPrimary" />
                <!--<com.hollowsoft.library.fontdroid.TextView-->
                <!--android:id="@+id/txtPopUpTitle"-->
                <!--style="@style/iranSansBold"-->


                <ImageView
                    android:id="@+id/imgPopUpIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:padding="2dp"
                    android:src="@drawable/ic_time_white" />
                <!--android:layout_width="UNKNOWN_DATA_0x1801"-->
                <!--android:layout_height="UNKNOWN_DATA_0x1801"-->


            </LinearLayout>


            <ir.msit87.mydigistore.view.AMTextView
                android:id="@+id/txtTopDescription"
                style="@style/TopDescription"
                android:layout_marginLeft="0dp"
                android:contentDescription="Enter your code"
                android:text="کد را وارد کنید" />
            <!--<com.hollowsoft.library.fontdroid.TextView-->
            <!--android:layout_height="UNKNOWN_DATA_0x7f0a00fb"-->
            <!--android:layout_width="match_parent"-->

            <include layout="@layout/divider_horizontal" />


            <LinearLayout
                style="@style/InputContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/InputRowContainer"
                    android:layout_marginLeft="0dp"
                    android:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
                    android:orientation="horizontal">
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="UNKNOWN_DATA_0x7f0a0093"-->


                    <ir.msit87.mydigistore.view.AMEditText
                        android:id="@+id/edtCode"
                        style="@style/InputRowEditText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:contentDescription="code"
                        android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                        android:hint="کد" />
                    <!--<com.hollowsoft.library.fontdroid.EditText-->


                    <ImageView
                        style="@style/InputRowIcon"
                        android:src="@drawable/ic_code_dark" />
                    <!--android:layout_width="UNKNOWN_DATA_0x7f0a0095"-->

                    <!--android:layout_height="UNKNOWN_DATA_0x7f0a0098"-->

                </LinearLayout>


            </LinearLayout>


            <include layout="@layout/divider_horizontal" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/shape_fillter_button_container_outline"
                android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                android:orientation="horizontal">
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="UNKNOWN_DATA_0x3001"-->


                <ir.msit87.mydigistore.view.AMTextView
                    android:id="@+id/txtReSendCode"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1.0"
                    android:contentDescription="I didn't receive the code"
                    android:gravity="center_vertical|center_horizontal|center"
                    android:text="کد را دریافت نکرده ام"
                    android:textColor="@color/colorPrimary"
                    android:textSize="13dp" />
                <!--<com.hollowsoft.library.fontdroid.TextView-->
                <!--android:layout_width="UNKNOWN_DATA_0x1"-->
                <!--android:layout_height="UNKNOWN_DATA_0x3001"-->


                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorOrange" />
                <!--android:layout_width="UNKNOWN_DATA_0x101"-->


                <ir.msit87.mydigistore.view.AMTextView
                    android:id="@+id/txtAccept"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1.0"
                    android:contentDescription="submit"
                    android:gravity="center_vertical|center_horizontal|center"
                    android:text="ثبت"
                    android:textColor="@color/colorPrimary"
                    android:textSize="13dp" />
                <!--<com.hollowsoft.library.fontdroid.TextView-->
                <!--style="@style/iranSansNormal"-->
                <!--android:layout_width="UNKNOWN_DATA_0x1"-->
                <!--android:layout_height="UNKNOWN_DATA_0x3001"-->

            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>