<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <ScrollView
        android:id="@id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="please wait until the App starts up"
        android:scrollbars="vertical">
        <!--android:scrollbars="UNKNOWN_DATA_0x0"-->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff">

            <ImageView
                android:id="@+id/background_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/bg_splash" />

            <ImageView
                android:id="@+id/background_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/bg_splash" />

        </FrameLayout>
    </ScrollView>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/imgZoodFoodLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_snapp_food_main" />
    <!--android:layout_width="UNKNOWN_DATA_0x8001"-->
    <!--android:layout_height="UNKNOWN_DATA_0x8001"-->

    <com.pnikosis.materialishprogress.ProgressWheel
        android:id="@+id/progressWheel"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        wheel:matProg_barColor="#cfcfcf"
        wheel:matProg_barWidth="2dp"
        wheel:matProg_progressIndeterminate="true" />
    <!--android:layout_width="UNKNOWN_DATA_0x1901"-->
    <!--android:layout_height="UNKNOWN_DATA_0x1901"-->

</RelativeLayout>
