<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    app:cardBackgroundColor="#ffffff"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="false">


    <LinearLayout
        android:id="@+id/lnlContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground"
        tools:ignore="Orientation">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|right|center_horizontal|fill_horizontal|center|fill|start|end"
            android:orientation="vertical"
            android:paddingLeft="10dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="20dp">

                <ir.msit87.mydigistore.view.AMTextView
                    android:id="@+id/txtDiscount"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/badge_discount"
                    android:gravity="center_vertical|center_horizontal|center"
                    android:lines="1"
                    android:paddingBottom="1dp"
                    android:paddingTop="3dp"
                    android:text="4.5"
                    android:textColor="#ffffff"
                    android:textSize="9dp" />
                <!--<com.hollowsoft.library.fontdroid.TextView-->
                <!--style="@style/iranSansMedium"-->
                <!--android:layout_width="UNKNOWN_DATA_0x1a01"-->
                <!--android:layout_height="UNKNOWN_DATA_0x1a01"-->


            </LinearLayout>


            <ir.msit87.mydigistore.view.AMTextView
                android:id="@+id/txtRate"
                android:layout_width="36dp"
                android:layout_height="25dp"
                android:background="@drawable/restaurant_list_rating_bg"
                android:gravity="center_vertical|center_horizontal|center"
                android:lines="1"
                android:paddingBottom="1dp"
                android:paddingTop="1dp"
                android:text="4.5"
                android:textColor="#ffffff"
                android:textSize="14dp"
                android:textStyle="bold" />
            <!--<com.hollowsoft.library.fontdroid.TextView-->
            <!--style="@style/iranSansMedium"-->
            <!--android:layout_width="UNKNOWN_DATA_0x2401"-->
            <!--android:layout_height="UNKNOWN_DATA_0x1901"-->
            <!--android:minTextSize="10dp"-->

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="20dp">
            <!--android:layout_width="UNKNOWN_DATA_0x1"-->


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingRight="15dp">
                <!--android:layout_width="UNKNOWN_DATA_0x1"-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ir.msit87.mydigistore.view.AMTextView
                        android:id="@+id/txtName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:ellipsize="end"
                        android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                        android:lines="1"
                        android:text="رستوران ایتالیایی سنسو"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                    <!--<com.hollowsoft.library.fontdroid.TextView-->
                    <!--style="@style/iranSansMedium"-->
                    <!--android:minTextSize="10dp"-->


                </LinearLayout>


                <ir.msit87.mydigistore.view.AMTextView
                    android:id="@+id/txtRestaurantKind"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:ellipsize="end"
                    android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                    android:lines="1"
                    android:maxLines="1"
                    android:text="فست فود"
                    android:textColor="@color/n_text_color_gray"
                    android:textSize="11dp" />
                <!--<com.hollowsoft.library.fontdroid.TextView-->
                <!--style="@style/iranSansLight"-->

                <ir.msit87.mydigistore.view.AMTextView
                    android:id="@+id/txtAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:ellipsize="end"
                    android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                    android:lines="1"
                    android:maxLines="1"
                    android:text="بلوار فردوس شرق ، خ رامین جنوبی ، پایین تر از پارک وفا آذر، نرسیده به کانال آب،"
                    android:textColor="@color/n_text_color_gray"
                    android:textSize="14dp" />
                <!--<com.hollowsoft.library.fontdroid.TextView-->
                <!--style="@style/iranSansLight"-->


                <LinearLayout
                    android:id="@+id/lnlBadgeContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                    android:orientation="horizontal" />





            </LinearLayout>


            <RelativeLayout
                android:layout_width="90dp"
                android:layout_height="90dp">
                <!--android:layout_width="UNKNOWN_DATA_0x5a01"-->
                <!--android:layout_height="UNKNOWN_DATA_0x5a01"-->


                <ImageView
                    android:id="@+id/imgThumbnail"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/shape_border_rectangle_default"
                    android:padding="1dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ph_snappfood" />
                <!--android:layout_width="UNKNOWN_DATA_0x5a01"-->
                <!--android:layout_height="UNKNOWN_DATA_0x5a01"-->


                <ir.msit87.mydigistore.view.AMTextView
                    android:id="@+id/txtCloseOverlay"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="1dp"
                    android:background="@drawable/shape_restaurant_close"
                    android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                    android:maxLines="1"
                    android:text="از 100 دقیقه دیگر"
                    android:textColor="#ffffff"
                    android:textSize="10dp"
                    android:visibility="gone" />
                <!--<com.zoodfood.android.utils.RTextView-->
                <!--android:layout_width="UNKNOWN_DATA_0x5a01"-->
                <!--android:layout_height="UNKNOWN_DATA_0x5a01"-->
                <!--style="@style/iranSansNormal"-->
                <!--android:minTextSize="5dp"-->


            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>