<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorCardBackground"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <ir.msit87.mydigistore.view.AMTextView
                    style="@style/RestaurantDetailsTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="today working hour"
                    android:gravity="center"
                    android:text="ساعت کاری امروز" />

                <ir.msit87.mydigistore.view.AMTextView
                    android:id="@+id/txtScheduleDetails"
                    style="@style/RestaurantDetailsDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end" />

            </LinearLayout>


            <include layout="@layout/divider_horizontal" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <ir.msit87.mydigistore.view.AMTextView
                    style="@style/RestaurantDetailsTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="delivery price"
                    android:gravity="center"
                    android:text="هزینه ارسال" />

                <ir.msit87.mydigistore.view.AMTextView
                    android:id="@+id/txtDeliveryCost"
                    style="@style/RestaurantDetailsDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end" />

            </LinearLayout>


            <include layout="@layout/divider_horizontal" />


            <LinearLayout
                style="@style/RestaurantDetailsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <ir.msit87.mydigistore.view.AMTextView
                    style="@style/RestaurantDetailsTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="minimum order price"
                    android:gravity="center"
                    android:text="حداقل سفارش" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:padding="2dp">

                        <ir.msit87.mydigistore.view.AMTextView
                            android:id="@+id/txtMinOrder"
                            style="@style/RestaurantDetailsDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:padding="2dp"
                        android:visibility="visible">

                        <ir.msit87.mydigistore.view.AMTextView
                            style="@style/RestaurantDetailsDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10%" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.0" />

                        <ir.msit87.mydigistore.view.AMTextView
                            style="@style/RestaurantDetailsDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="حق سرویس" />
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


            <include layout="@layout/divider_horizontal" />


            <LinearLayout
                style="@style/RestaurantDetailsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ir.msit87.mydigistore.view.AMTextView
                    android:id="@+id/textView5"
                    style="@style/RestaurantDetailsTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="delivery areas"
                    android:text="محدوده سرویس دهی" />

                <ir.msit87.mydigistore.view.AMTextView
                    android:id="@+id/txtDeliveryArea"
                    style="@style/RestaurantDetailsDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <include layout="@layout/divider_horizontal" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    style="@style/RestaurantDetailsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ir.msit87.mydigistore.view.AMTextView
                        style="@style/RestaurantDetailsTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="نوع غذا" />

                    <ir.msit87.mydigistore.view.AMTextView
                        android:id="@+id/txtFoodType"
                        style="@style/RestaurantDetailsDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>


                <include layout="@layout/divider_horizontal" />
            </LinearLayout>


            <LinearLayout
                style="@style/RestaurantDetailsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ir.msit87.mydigistore.view.AMTextView
                    style="@style/RestaurantDetailsTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="restaurant position"
                    android:text="موقعیت" />

                <ir.msit87.mydigistore.view.AMTextView
                    android:id="@+id/txtAddress"
                    style="@style/RestaurantDetailsDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">
                <!--android:layout_height="UNKNOWN_DATA_0xc801">-->

                <com.google.android.gms.maps.MapView
                    android:id="@+id/map"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="-66dp"
                    android:layout_marginTop="-66dp" />

                <ImageView
                    android:id="@+id/transparent_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </RelativeLayout>


            <include layout="@layout/divider_horizontal" />


            <LinearLayout
                android:id="@+id/dailySchedulesParent"
                style="@style/RestaurantDetailsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ir.msit87.mydigistore.view.AMTextView
                    style="@style/RestaurantDetailsTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="working hours"
                    android:text="ساعت کاری" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <include layout="@layout/divider_horizontal" />


            <LinearLayout
                android:id="@+id/lytPaymentType"
                style="@style/RestaurantDetailsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ir.msit87.mydigistore.view.AMTextView
                    style="@style/RestaurantDetailsTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="payment options"
                    android:text="نحوه پرداخت" />

                <ir.msit87.mydigistore.view.AMTextView
                    android:id="@+id/txtPaymentType"
                    style="@style/RestaurantDetailsDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </LinearLayout>


    </ScrollView>


</LinearLayout>