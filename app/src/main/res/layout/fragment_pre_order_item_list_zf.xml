<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lnlContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
    android:orientation="vertical">

    <!--<com.zoodfood.android.View.SmartNumberPicker-->
    <!--android:id="@+id/smartNumberPicker"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="match_parent"-->
    <!--android:visibility="gone" />-->

    <com.shawnlin.numberpicker.NumberPicker
        android:id="@+id/numberPicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:np_dividerColor="@color/colorDivider"
        app:np_dividerDistance="36dp"
        app:np_dividerThickness="1dp"
        app:np_textColor="@color/textColorDarkPrimary"
        app:np_textSize="16dp"
        app:np_typeface="fonts/IRANSansMobile.ttf"
        app:np_wheelItemCount="5" />


</LinearLayout>
